{% extends './layout-session.njk' %}

{% block head %}
    <title>Foodfy - Esqueceu senha</title>
{% endblock %}

{% block content %}
<section class='container session-container'>
    <form  method='POST' action='/password-forgot'>
        <h1>Esqueceu a senha?</h1>

        <div class='item'>
            <h3>Email</h3>
            <div class='input'>
                <input 
                    type='email'
                    name='email'
                    value='{{user.email}}'
                    placeholder='Digite seu email para recuperar sua senha'
                    onblur='Validate.apply(this, 'isEmail')'
                    {% if error %}class='error'{% endif %}
                >
            </div>
        </div>

        <div class='actions single'>
            <button class='button' type='submit'>Recuperar</button>
        </div>
    </form>
</section>

{% endblock %}